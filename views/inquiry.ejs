<% layout("common/common_layout") %>
<% head = '<link rel="stylesheet" href="/css/inquiry.css" />' %>
<div class="inquiry-form">
  <form action="/inquiry/i" method="post">
    <h2>お問い合わせフォーム</h2>
    
    <div class="radio-group">
      <label><input type="radio" name="occupation" value="学生" <%= inputData.occupation === '学生' ? 'checked' : '' %>> 学生</label>
      <label><input type="radio" name="occupation" value="会社員" <%= inputData.occupation === '会社員' ? 'checked' : '' %>> 会社員</label>
      <label><input type="radio" name="occupation" value="自営業" <%= inputData.occupation === '自営業' ? 'checked' : '' %>> 自営業</label>
      <label><input type="radio" name="occupation" value="その他" <%= inputData.occupation === 'その他' ? 'checked' : '' %>> その他</label>
    </div>
    <% if (errors && errors.occupation) { %>
      <div class="error-message"><%= errors.occupation %></div>
    <% } %>

    <label for="name">名前：</label>
    <input type="text" id="name" name="name" value="<%= inputData.name || '' %>" required>
    <% if (errors && errors.name) { %>
      <div class="error-message"><%= errors.name %></div>
    <% } %>

    <label for="email">メールアドレス：</label>
    <input type="email" id="email" name="email" value="<%= inputData.email || '' %>" required>
    <% if (errors && errors.email) { %>
      <div class="error-message"><%= errors.email %></div>
    <% } %>

    <label for="phone">電話番号：</label>
    <input type="tel" id="phone" name="phone" value="<%= inputData.phone || '' %>" required>
    <% if (errors && errors.phone) { %>
      <div class="error-message"><%= errors.phone %></div>
    <% } %>

    <label for="message">相談内容：</label>
    <textarea id="message" name="message" required><%= inputData.message || '' %></textarea>
    <% if (errors && errors.message) { %>
      <div class="error-message"><%= errors.message %></div>
    <% } %>

    <input type="submit" value="送信">
  </form>
</div>